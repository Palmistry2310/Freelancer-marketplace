<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Available Jobs | earnwave</title>
    <link rel="stylesheet" href="/public/navbar.css" />
    <link rel="stylesheet" href="/public/joblist.css" />
    <!-- Google fonts  -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100..1000;1,9..40,100..1000&family=Handlee&family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <%- include('../../components/navbar.ejs') %>
    <!-- Main Content -->
    <main>
      <h1>Available Jobs</h1>

      <div class="jobs-grid">
        <% jobs.forEach(job => { %>

        <div class="card">
          <div class="card-header">
            <div class="header-left">
              <div class="icon">
                <img
                  src="https://hebbkx1anhila5yf.public.blob.vercel-storage.com/image-rmZNfINKNpvo7E0ukBaj3gu5O3oWdd.png"
                  alt="Company Logo"
                />
              </div>
              <div class="title-section">
                <h1><%= job.title %></h1>
                <span class="time">
                  <%= (function() {
                    const diffInSeconds = (new Date().getTime() - new Date(job.updatedAt).getTime()) / 1000;
                    if (diffInSeconds < 60) return Math.floor(diffInSeconds) + ' seconds ago';
                    if (diffInSeconds < 3600) return Math.floor(diffInSeconds / 60) + ' minutes ago';
                    if (diffInSeconds < 86400) return Math.floor(diffInSeconds / 3600) + ' hours ago';
                    return Math.floor(diffInSeconds / 86400) + ' days ago';
                })() %>
                </span>
              </div>
            </div>
            <div class="bookmark">
              <svg
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <path
                  d="M19 21l-7-5-7 5V5a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2z"
                ></path>
              </svg>
            </div>
          </div>

          <div class="job-details">
            <strong>Budget: </strong>₹<%= job.budget %> <b>·</b>
            <strong>Deadline: </strong> <%= new
            Date(job.deadline).toDateString() %>
          </div>

          <div class="description"><%= job.desc %></div>

          <div class="tags">
            <% job.skillsRequired.forEach((skill)=>{ %>
            <span class="tag"><%= skill %></span>
            <% }) %>
          </div>
          <button class="apply-button">Apply</button>
        </div>
        <% }) %>
      </div>
    </main>
    
    <script>
       const jobsData = <%- JSON.stringify(jobs) %>;

      function showJobDetails(jobId) {
        const job = jobsData.find((j) => j._id === jobId);
        if (!job) return;

        // Update modal content
        document.getElementById("modal-title").textContent = job.title;
        document.getElementById("modal-budget").textContent = `₹${job.budget}`;
        document.getElementById("modal-deadline").textContent = new Date(
          job.deadline
        ).toDateString()
        document.getElementById("modal-description").textContent = job.desc;

        // Update skills
        const skillsContainer = document.getElementById("modal-skills");
        skillsContainer.innerHTML = job.skillsRequired?.length
          ? job.skillsRequired
              .map((skill) => `<span class="skill-tag">${skill}</span>`)
              .join("")
          : "No skills specified";

        // Show modal
        document.getElementById("modal-overlay").classList.remove("hidden");
        document.body.style.overflow = "hidden";
      }

      function hideJobDetails() {
        document.getElementById("modal-overlay").classList.add("hidden");
        document.body.style.overflow = "auto";
      }

      document
        .getElementById("modal-overlay")
        .addEventListener("click", (e) => {
          if (e.target === e.currentTarget) {
            hideJobDetails();
          }
        });
    </script>
  </body>
</html>
